{
  "name": "Red Cross Round Up",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Round up your internet purchases and donate money to help people in need.",
  "homepage_url": "http://www.redcross.org/index.jsp",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "web_accessible_resources": [
    "icons/*.png"
  ],
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/19.png",
    "default_title":"Red Cross Round Up",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "cookies",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts":[
    {
      "matches":["https://www.amazon.com/*"],
      "js":[
        "src/inject/jquery.js",
        "src/inject/inject.js"
      ],
      "css":[
        "src/inject/inject.css"
      ]
    }
  ],
  "externally_connectable": {
    "matches": ["https://www.amazon.com/*"]
  }
}